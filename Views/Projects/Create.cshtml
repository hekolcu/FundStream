@model FundStream.Models.Project
@{
    ViewData["Title"] = "Start a Project";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="text-center mb-4">Start a Project</h2>

        <form asp-action="Create" method="post" class="card card-body bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GoalAmount" class="control-label">Goal Amount</label>
                <input asp-for="GoalAmount" class="form-control" placeholder="Goal (in USD)" type="number" step="0.01" />
                <span asp-validation-for="GoalAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label">End Date</label>
                <input asp-for="EndDate" class="form-control" placeholder="End Date" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-2">Get started!</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
