@model FundStream.Models.Project
@{
    ViewData["Title"] = "Delete Project";
}

<h2>Delete Project</h2>
<h3>Are you sure you want to delete this project?</h3>

<div>
    <h4>@Model.Title</h4>
    <div>
        <strong>Description:</strong> @Model.Description <br/>
        <strong>Goal Amount:</strong> @Model.GoalAmount <br/>
        <strong>Start Date:</strong> @Model.StartDate.ToShortDateString() <br/>
        <strong>End Date:</strong> @Model.EndDate.ToShortDateString() <br/>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.ProjectId" method="post">
        <input type="hidden" asp-for="ProjectId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>