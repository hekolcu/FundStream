@{
    Layout = "_Layout";
    ViewData["Title"] = "Jump start your project today!";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Jump start your project today!</h1>
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Register</h2>
            @{await Html.RenderPartialAsync("_RegisterPartial");}
        </div>
        <div class="col-md-6">
            <h2 class="text-center">Login</h2>
            @{await Html.RenderPartialAsync("_LoginPartial");}
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}